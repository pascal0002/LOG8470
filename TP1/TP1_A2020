ltl p6a {(PINOK -> []canDeposit)};
//ltl p6a {[](PINOK -> canDeposit)};
//ltl p6b {PINvalid -> (requestWithdrawal || requestBalance || makeDeposit ) U ejectCard };
//ltl p6c {makeDeposit -> <> ( cancelDeposit || !cancelDeposit)};

